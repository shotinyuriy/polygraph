<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<VBox alignment="TOP_CENTER" maxHeight="320.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="kz.aksay.polygraph.desktop.MaterialConsumptionTableViewController">
   <children>
   		<Label text="Расход материалов" />
   		<TableView fx:id="materialConsumptionsTableView" maxHeight="200.0">
   			<columns>
   				<TableColumn prefWidth="300.0" text="Материал">
   					<cellValueFactory>
                  <PropertyValueFactory property="materialName" />
               </cellValueFactory>
   				</TableColumn>
   				<TableColumn prefWidth="150.0" text="Количество">
   					<cellValueFactory>
                  <PropertyValueFactory property="quantity" />
               </cellValueFactory>
   				</TableColumn>
				<TableColumn prefWidth="150.0" text="Стоимость">
   					<cellValueFactory>
                  <PropertyValueFactory property="cost" />
               </cellValueFactory>
   				</TableColumn>
				<TableColumn prefWidth="150.0" text="В т.ч. брак">
   					<cellValueFactory>
                  <PropertyValueFactory property="wasted" />
               </cellValueFactory>
   				</TableColumn>
   			</columns>
   		</TableView>
   		
   		<VBox fx:id="controlPanel" spacing="0.0">
	   		<HBox alignment="TOP_LEFT" spacing="0.0">
		      <children>
		      			<Label text="Материал" />
		      			<ComboBox fx:id="materialCombo" editable="true" />
		      			<Label text="Количество" />
		      			<TextField fx:id="quantityField" />
		      </children>
	   		</HBox>
	   		
	   		<HBox alignment="TOP_LEFT" spacing="0.0">
		      <children>
		      			<Label text="Брак" />
		      			<TextField fx:id="wastedField" />      			
		      </children>
	   		</HBox>
	   		
	   		<HBox alignment="TOP_LEFT" spacing="0.0">
		      <children>
		      			<Button onAction="#addConsumption" text="Добавить расход" />
		      			<Button onAction="#removeConsumption" text="Удалить расход" />
		      </children>
	   		</HBox>
   		</VBox>
   		
   		<Label fx:id="validationLabel" />
   </children>
</VBox>

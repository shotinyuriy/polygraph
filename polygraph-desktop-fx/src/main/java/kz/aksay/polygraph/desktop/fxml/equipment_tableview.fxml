<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.collections.*?>
<?import javafx.scene.control.cell.*?>
<?import kz.aksay.polygraph.desktop.model.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
	fx:controller="kz.aksay.polygraph.desktop.EquipmentTableViewController">
<GridPane alignment="TOP_CENTER" hgap="10.0" vgap="10.0">
	<padding>
		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
	<Label style="-fx-font: NORMAL 20 Tahoma;" text="Типы оборудования"
		GridPane.columnIndex="0" GridPane.rowIndex="0">
	</Label>
	<TableView fx:id="tableView" GridPane.columnIndex="0"
		GridPane.rowIndex="1" editable="true">
		<columns>
			<TableColumn fx:id="nameColumn" text="Название" prefWidth="100" 
				editable="true" onEditCommit="#updateName">
				<cellValueFactory><PropertyValueFactory property="name"/></cellValueFactory>
			</TableColumn>
			<TableColumn fx:id="monochromeUsageCountColumn" text="Ч/Б прогоны A3" prefWidth="100" 
				editable="true" >
				<cellValueFactory><PropertyValueFactory property="monochromeUsagesA3"/></cellValueFactory>
			</TableColumn>
			<TableColumn fx:id="monochromeUsageCountColumn" text="Ч/Б прогоны A4" prefWidth="100" 
				editable="true" >
				<cellValueFactory><PropertyValueFactory property="monochromeUsagesA4"/></cellValueFactory>
			</TableColumn>
			<TableColumn fx:id="coloredUsageCountColumn" text="Цветные прогоны А3" prefWidth="100" 
				editable="true" >
				<cellValueFactory><PropertyValueFactory property="coloredUsagesA3"/></cellValueFactory>
			</TableColumn>
			<TableColumn fx:id="coloredUsageCountColumn" text="Цветные прогоны А4" prefWidth="100" 
				editable="true" >
				<cellValueFactory><PropertyValueFactory property="coloredUsagesA4"/></cellValueFactory>
			</TableColumn>
			<TableColumn fx:id="ordersCountColumn" text="Счетчик заказов" prefWidth="100" 
				editable="true" onEditCommit="#updateOrdersCount">
				<cellValueFactory><PropertyValueFactory property="ordersCountString"/></cellValueFactory>
			</TableColumn>
			
		</columns>
		<items>
			<FXCollections fx:factory="observableArrayList">
			</FXCollections>
		</items>
		<sortOrder>
			<fx:reference source="nameColumn"/>
		</sortOrder>
	</TableView>
	<HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="0"
		GridPane.rowIndex="2">
		<TextField fx:id="nameField" promptText="Название" prefWidth="90"/>
		<Button text="Добавить" onAction="#add"/>
		<Label fx:id="validationLabel" text=""/>
	</HBox>
</GridPane>
</AnchorPane>


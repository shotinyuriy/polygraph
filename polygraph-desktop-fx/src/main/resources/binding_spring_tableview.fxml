<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Scene?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.collections.*?>
<?import javafx.scene.control.cell.*?>
<?import kz.aksay.polygraph.desktop.model.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kz.aksay.polygraph.desktop.BindingSpringTableViewController">
   <children>
      <ScrollPane>
         <content>
            <VBox>
               <children>
               	<Label style="-fx-font: NORMAL 20 Tahoma;" text="Пружины"/>
               	<TableView fx:id="tableView" editable="true" GridPane.columnIndex="0" GridPane.rowIndex="1">
               		<columns>
               			<TableColumn fx:id="typeColumn" editable="true" onEditCommit="#updateType" prefWidth="100" text="Тип">
               				<cellValueFactory>
                              <PropertyValueFactory property="typeName" />
                           </cellValueFactory>
               			</TableColumn>
               			<TableColumn fx:id="diameterColumn" editable="true" onEditCommit="#updateDiameter" prefWidth="100" text="Диаметер">
               				<cellValueFactory>
                              <PropertyValueFactory property="diameterString" />
                           </cellValueFactory>
               			</TableColumn>
               			
               			<TableColumn fx:id="priceColumn" editable="true" onEditCommit="#updatePrice" prefWidth="100" text="Цена">
               				<cellValueFactory>
                              <PropertyValueFactory property="priceString" />
                           </cellValueFactory>
               			</TableColumn>
               			
               			<TableColumn fx:id="descriptionColumn" editable="true" onEditCommit="#updateDescription" prefWidth="200" text="Примечание">
               				<cellValueFactory>
                              <PropertyValueFactory property="description" />
                           </cellValueFactory>
               			</TableColumn>
               			
               		</columns>
               		<items>
               			<FXCollections fx:factory="observableArrayList"/>
               		</items>
               		<sortOrder>
               			<fx:reference source="descriptionColumn" />
               		</sortOrder>
               	</TableView>
               	<HBox alignment="bottom_right" spacing="10">
                  <children>
                  		<ComboBox fx:id="typeBox" />
                  		<TextField fx:id="diameterField" prefWidth="90" promptText="Диаметер" />
                  		<TextField fx:id="priceField" promptText="Цена" prefWidth="90"/>
                  		<TextField fx:id="descriptionField" prefWidth="90" promptText="Примечание" />
                  </children>
               	</HBox>
               	<HBox >
               		<children>
               			<Button onAction="#add" text="Добавить" />
                  		<Button onAction="#delete" text="Удалить" />
               		</children>
               	</HBox>
               	<Label fx:id="validationLabel" text="" />
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</AnchorPane>

<VBox minHeight="200.0" minWidth="200.0" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kz.aksay.polygraph.desktop.MainMenuController">
  <children>
    <MenuBar onMouseClicked="#exit" VBox.vgrow="NEVER">
         <menus>
            <Menu mnemonicParsing="false" text="Файл">
              <items>
                <MenuItem fx:id="menuExit" mnemonicParsing="false" onAction="#exit" text="Выход" />
              </items>
            </Menu>
			<Menu mnemonicParsing="false" text="Данные">
              <items>
                <MenuItem fx:id="generateAllEntities" mnemonicParsing="false" onAction="#generateAllEntities" text="Сгенерировать" />
              </items>
            </Menu>
         </menus>
    </MenuBar>
    <SplitPane dividerPositions="0.5" focusTraversable="true" minHeight="200.0" minWidth="200.0" prefHeight="600.0" prefWidth="400.0" VBox.vgrow="ALWAYS">
         <items>
            <AnchorPane maxWidth="200.0" prefHeight="600.0" prefWidth="200.0">
               <children>
                  <TreeView fx:id="treeViewMenu" prefHeight="546.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children>
            </AnchorPane>
            <AnchorPane fx:id="contentPane" minHeight="200.0" minWidth="200.0">
               <children>
                  <TabPane fx:id="tabPane" minHeight="200.0" minWidth="200.0" prefHeight="600.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children>
              </AnchorPane>
         </items>
         </SplitPane>
    <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
      <children>
        <Label fx:id="leftStatus" maxHeight="1.7976931348623157E308" maxWidth="-1.0" text="Left status" HBox.hgrow="ALWAYS">
          <font>
            <Font size="11.0" fx:id="x3" />
          </font>
          <textFill>
            <Color blue="0.625" green="0.625" red="0.625" fx:id="x4" />
          </textFill>
        </Label>
        <Pane prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS">
               <children>
                  <ProgressBar fx:id="progressBar" layoutX="529.0" layoutY="1.0" prefWidth="200.0" visible="false" />
               </children></Pane>
        <Label fx:id="rightStatus" font="$x3" maxWidth="-1.0" text="Right status" textFill="$x4" HBox.hgrow="NEVER" />
      </children>
      <padding>
        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
      </padding>
    </HBox>
  </children>
  <stylesheets>
    <URL value="@./dark-theme.css" />
  </stylesheets>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>

<fx:root type="javafx.scene.layout.AnchorPane" xmlns:fx="http://javafx.com/fxml">
	<Label fx:id="titleLabel" alignment="TOP_CENTER"/>
   	<GridPane alignment="TOP_CENTER" hgap="10" vgap="10">
      <children>
      		<Label text="Город" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      		<Label text="Улица" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      		<Label text="Дом" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      		<Label text="Квартира" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      
      		<TextField fx:id="cityField" GridPane.columnIndex="2" GridPane.rowIndex="1" />
      		<TextField fx:id="streetField" GridPane.columnIndex="2" GridPane.rowIndex="2" />
      		<TextField fx:id="houseField" GridPane.columnIndex="2" GridPane.rowIndex="3" />
      		<TextField fx:id="apartmentField" GridPane.columnIndex="2" GridPane.rowIndex="4" />
      </children>
   	</GridPane>
</fx:root>


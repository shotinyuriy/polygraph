<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="kz.aksay.polygraph.desktop.OrganizationFormController"  alignment="TOP_CENTER">
<children>
	<GridPane vgap="10" hgap="10" alignment="TOP_CENTER">
		<Label text="Код в 1С" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
		<Label text="Полное наименование" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
		<Label text="Краткое наименование" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
		<Label text="Фио директора" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
		<Label text="ИИН/БИН" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
		<Label text="ИИК" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
		<Label text="E-mail" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
		<Label text="Моб." GridPane.rowIndex="7" GridPane.columnIndex="1"/>
		<Label text="Тел." GridPane.rowIndex="8" GridPane.columnIndex="1"/>
		<TextField fx:id="code1cField" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
		<TextArea fx:id="fullNameField" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
		<TextField fx:id="shortNameField" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
		<TextField fx:id="directorNameField" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
		<TextField fx:id="innField" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
		<TextField fx:id="kppField" GridPane.rowIndex="5" GridPane.columnIndex="2"/>
		<TextField fx:id="emailField" GridPane.rowIndex="6" GridPane.columnIndex="2"/>
		<TextField fx:id="mobileField" GridPane.rowIndex="7" GridPane.columnIndex="2"/>
		<TextField fx:id="phoneField" GridPane.rowIndex="8" GridPane.columnIndex="2"/>
		
	</GridPane>
	<Label text="Адрес" alignment="TOP_CENTER"/>
	<GridPane vgap="10" hgap="10" alignment="TOP_CENTER">
		<Label text="Город" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
		<Label text="Улица" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
		<Label text="Дом" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
		<Label text="Квартира" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

		<TextField fx:id="cityField" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
		<TextField fx:id="streetField" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
		<TextField fx:id="houseField" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
		<TextField fx:id="apartmentField" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
	</GridPane>
	
	<VBox prefWidth="640.0">
		<Label text="Договоры" alignment="BASELINE_CENTER"/>
		
		<TableView fx:id="contractsTableView">
		  	<columns>
		  		<TableColumn text="Номер" prefWidth="150.0">
		 			<cellValueFactory><PropertyValueFactory property="number"/></cellValueFactory>
		 		</TableColumn>
		 		<TableColumn text="Дата начала" prefWidth="150.0">
		 			<cellValueFactory><PropertyValueFactory property="beginDateString"/></cellValueFactory>
		 		</TableColumn>
		 		<TableColumn text="Дата завершения"  prefWidth="150.0">
		 			<cellValueFactory><PropertyValueFactory property="endDateString"/></cellValueFactory>
		 		</TableColumn>
		 	</columns>
		</TableView>
		
		<HBox alignment="BASELINE_CENTER">
			<children>
				<Button fx:id="addContractButton" alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#addContract" 
					text="Добавить"  />
			    	
				<Button fx:id="editContractButton" alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#editContract" 
					text="Изменить" />
			    	
				<Button fx:id="deleteContractButton" alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#deleteContract" 
					text="Удалить" />
			</children>
		</HBox>
	</VBox>
	
	<VBox prefWidth="640.0">
		<Label text="Доверенности" alignment="BASELINE_CENTER"/>
		
		<TableView fx:id="vicariousPowerTableView">
		  	<columns>
		  		<TableColumn text="Номер" prefWidth="150.0">
		 			<cellValueFactory><PropertyValueFactory property="number"/></cellValueFactory>
		 		</TableColumn>
		 		<TableColumn text="ФИО доверенного" prefWidth="150.0">
		 			<cellValueFactory><PropertyValueFactory property="personName"/></cellValueFactory>
		 		</TableColumn>
		 		<TableColumn text="Дата выдачи"  prefWidth="150.0">
		 			<cellValueFactory><PropertyValueFactory property="beginDateString"/></cellValueFactory>
		 		</TableColumn>
		 		<TableColumn text="Дата завершения"  prefWidth="150.0">
		 			<cellValueFactory><PropertyValueFactory property="endDateString"/></cellValueFactory>
		 		</TableColumn>
		 	</columns>
		</TableView>
		
		<HBox alignment="BASELINE_CENTER">
			<children>
				<Button fx:id="addVicariousPowerButton" alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#addVicariousPower" 
					text="Добавить"  />
			    	
				<Button fx:id="editVicariousPowerButton" alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#editVicariousPower" 
					text="Изменить" />
			    	
				<Button fx:id="deleteVicariousPowerButton" alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#deleteVicariousPower" 
					text="Удалить" />
			</children>
		</HBox>
	</VBox>
	
	<HBox alignment="BASELINE_CENTER">
		<children>
		<Button text="Сохранить"
			onAction="#save" />
		<Button fx:id="newOrderButton" text="Новый заказ"
			onAction="#openNewOrder" visible="false"/>
		</children>
	</HBox>
	
	<Label text="" fx:id="validationLabel"/>
</children>
</VBox>
